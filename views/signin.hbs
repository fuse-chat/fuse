<!-- views/signin.handlebars -->
<div class="jumbotron sign-in-container">
  <h1>Fuse Chat</h1>
  <p></p>
  <p>
    <a data-toggle="collapse" href="#local" class="btn btn-warning btn-lg" role="button"><i class="fa fa-lock"></i>Sign in Locally</a>
    <a href="/auth/google" class="btn btn-danger btn-lg" role="button"><i class="fa fa-google"></i>Sign in with Google</a>
    <a href="/auth/facebook" class="btn btn-primary btn-lg" role="button"><i class="fa fa-facebook"></i>Sign in with Facebook</a>
  </p>

  <div id="local" class="collapse">
    <a data-toggle="collapse" href="#local-sign-in" class="btn btn-default btn-md" role="button">I already have an account</a>
    <a data-toggle="collapse" href="#local-reg" class="btn btn-default btn-md" role="button">I need to make an account</a>
  </div>

  <form id="local-sign-in" class="collapse" action="/login" method="post">
    <div class="form-group">
      <label for="inputEmail" class="col-lg-2 control-label">Email</label>
      <div class="col-lg-12">
        <input class="form-control" id="inputEmail" placeholder="Email" name="username" type="text">
      </div>
    </div>
    <div class="form-group">
      <label for="inputPassword" class="col-lg-2 control-label">Password</label>
      <div class="col-lg-12">
        <input class="form-control" id="inputPassword" placeholder="Password" name="password" type="password">
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-12">
        <input type="submit" class="btn btn-primary btn-sm" value="Log in"/>
      </div>
    </div>
  </form>

  <form id="local-reg" class="collapse" action="/local-reg" method="post">
    <div class="form-group">
      <label for="inputEmail" class="col-lg-2 control-label">Email</label>
      <div class="col-lg-12">
        <input class="form-control" id="inputEmail" placeholder="Email" name="username" type="text">
      </div>
    </div>
    <div class="form-group">
      <label for="inputPassword" class="col-lg-2 control-label">Password</label>
      <div class="col-lg-12">
        <input class="form-control" id="inputPassword" placeholder="Password" name="password" type="password">
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-12">
        <input type="submit" class="btn btn-primary btn-sm" value="Register"/>
      </div>
    </div>
  </form>
</div>
